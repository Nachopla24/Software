<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Usuario:</strong>
    <%= @post.user.nombre%>
  </p>

  <p>
    <strong>Titulo:</strong>
    <%= @post.titulo %>
  </p>

  <p>
    <strong>Descripcion:</strong>
    <%= @post.descripcion %>
  </p>

  <p>
    <strong>Likes:</strong>
    <%= @post.likes %>
  </p>

  <p>
    <strong>Imagen:</strong><br>
    <%= image_tag @post.image.thumb.url, class: 'figure-img img-fluid rounded'%>
  </p>


  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>  
</div>

