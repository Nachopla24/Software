<h1>
  <% if user_signed_in? %>
    <p>Bienvenido: <%= current_user.nombre %></p>
  <%end%>
</h1>
<h2>
  <p class="notice text-primary"><%= notice %></p>
<p class="alert text-primary"> <%= alert %></p>
</h2>
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-4 ">
        <figure class="figure ">
            <%= image_tag post.image.thumb.url, class: 'rounded'%>
          <figcaption class="figure-caption"><%= post.descripcion %><br>
          <%= link_to 'Ver', post %>
          <%= link_to 'Editar', edit_post_path(post) %>
          <%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Estas seguro?' } %><br>
          <%= link_to "Descargar" , post.image.url, download: post.image.store_dir %><br><br>
          </figcaption>
        </figure>
      </div>  
    <% end %>
    <br><br>
  </div>
  <%= link_to 'Nuevo Post', new_post_path, class: 'btn btn-primary btn-lg'  %>  
</div>

