
<header class="navbar navbar-expand-lg navbar-light bg-light fixed-top nav-shadow">
    <a class="navbar-brand" href="/">Plataforma Goodness</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-md-auto d-md-flex">
        <li class="nav-item">
          <%= form_tag(search_course_path, :method => "get", id: "search-form", class: 'form-inline my-2 my-lg-0') do %>
          <%= text_field_tag :search, params[:search], data: {autocomplete_source: search_data_courses_path}, required: true,placeholder: "Buscar post de alguna carrera", style: 'border-radius: 5px; width: 300px' %>
          <%= submit_tag "Buscar",class: 'btn btn-primary d-lg-inline-block mb-3 mb-md-0 ml-md-3',id: 'btn-search' %>
        <% end %>
        </li>
        <li class="nav-item-active">
          <a class="nav-link" href="<%= universities_url %>">Universidades</a>
        </li>
        <% if user_signed_in? %>
          <%= usertype_helper%>
          <li class="nav-item">
            <a class="nav-link" href="<%= author_profile_path(current_user.username) %>">Ver Perfil</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= users_posts_path %>">Posts</a>
          </li>
          <li class="nav-item">
            <a class="navbar-brand" href="<%= edit_user_registration_path %>"><%= image_tag(current_user.avatar.url, class:"img_nav_profile") %>
              <span class="username-span"><%= current_user.username %></span></a>
          </li>
          <%= options_user %>
          <% else %>
          <li class="nav-item">
            <a class="nav-link"  href="<%= new_user_session_path %>">Iniciar Sesion</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-primary d-lg-inline-block mb-3 mb-md-0 ml-md-3"  href="<%= new_user_registration_path %>">Crear Cuenta</a>
          </li>
          <%end%>
      </ul>
    </div>
</header>
