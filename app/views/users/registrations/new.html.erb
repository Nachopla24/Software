<br>
<body class="main-background">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="main-color">
  <%= devise_error_messages! %>
</div>
    <div class="container">
    </br>
    </br>
      <div class="row">
        <div class="col-md-4 div-login main-color">
          <legend class="center">Registrate</legend>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,class:'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :username, "Nombre de usuario" %><br />
            <%= f.text_field :username, autofocus: true, class:'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres minimos)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control input-lg' %>
          </div>
        
          <div class="form-group">
              <%= f.label :seleccione_university, "Seleccione su universidad" %>
                <%= f.select :university_id, University.all.collect{ |u| [u.name, u.id]},{}, {class: 'form-control'}  %>
          </div>

          <div class="actions center">
            <%= f.submit "Registrarse" ,class:'btn btn-primary' %>
          </div>

<% end %>

<%= render "users/shared/links" %>
        </div>
      </div>
    </div>


</body>
