<div class="container">

 

  <p id="notice"><%= notice %></p>

  <h1>Universidades</h1>

  <table class="table table-striped" id="tabla-univerisad">
    <thead class="thead-dark">
      <tr>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Numdireccion</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @universidads.each do |universidad| %>
        <tr class="bg-primary">
          <td><%= universidad.nombre %></td>
          <td><%= universidad.direccion %></td>
          <td><%= universidad.numDireccion %></td>
          <td><%= universidad.descripcion %></td>
          <td><%= link_to 'Show', universidad, class: "btn btn-danger" %></td>
          <td><%= link_to 'Edit', edit_universidad_path(universidad), class: "btn btn-primary"%></td>
          <td><%= link_to 'Destroy', universidad, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Universidad', new_universidad_path, class: "btn btn-primary"  %>
</div>


<script type="text/javascript">
  $(document).ready(function() {
    $('#tabla-univerisad').DataTable();
} );
</script>



