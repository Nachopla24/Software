<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Universidades</h1>

  <table class="table table-striped borde">
    <thead class="thead-dark">
      <tr>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Numdireccion</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @universidads.each do |universidad| %>
        <tr class="bg-primary">
          <td><%= universidad.nombre %></td>
          <td><%= universidad.direccion %></td>
          <td><%= universidad.numDireccion %></td>
          <td><%= universidad.descripcion %></td>
          <td><%= link_to 'Show', universidad %></td>
          <td><%= link_to 'Edit', edit_universidad_path(universidad) %></td>
          <td><%= link_to 'Destroy', universidad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Universidad', new_universidad_path, class: 'btn btn-primary btn-md' %>
</div>



