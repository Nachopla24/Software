<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Carreras</h1>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Codigo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @carreras.each do |carrera| %>
        <tr class="bg-primary">
          <td><%= carrera.nombre %></td>
          <td><%= carrera.descripcion %></td>
          <td><%= carrera.codigo %></td>
          <td><%= link_to 'Ver', carrera, class: "btn btn-danger"  %></td>
          <td><%= link_to 'Editar', edit_carrera_path(carrera), class: "btn btn-success"  %></td>
          <td><%= link_to 'Eliminar', carrera, method: :delete, class: "btn btn-warning" , data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Carrera', new_carrera_path, class: 'btn btn-primary btn-md'%>  
</div>

