<div id="course-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title right"><%= title %></h4>
        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Close</span>
        </button>
      </div>
      <div class="container-col-md-5 modal-style mt-3 ml-3 mr-3 mb-3">
        <%= form_for(@course, remote: true , html: { class:"webkit-center", role: "form" }) do |f| %>
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <div class="form-group">
            <%= f.label :nombre_asignatura %><br />
            <%= f.text_field :name, class:'form-control', required: true %>
          </div>
          <hr>
          <div class="form-group webkit-center">
            <div class="actions col-md-4">
              <%= f.submit class: "btn btn-sm btn-success" %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
